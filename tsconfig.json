  "include": ["src", "types"],
  "exclude": ["node_modules/*", "public/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "noEmit": true,
  }
